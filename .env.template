# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=secret123456789
AWS_SECRET_ACCESS_KEY=secret123456789
AWS_SESSION_TOKEN=

# LocalStack Configuration (for testing)
AWS_ENDPOINT_URL=http://localhost:4566

# AWS SDK Configuration
AWS_MAX_ATTEMPTS=3

# Performance Configuration
# Not set by default, relies on AWS rate limiting handling
MAX_CONCURRENT_BUCKETS=

# Maximum recursion depth for S3 prefix listing
# Controls how deep the recursive folder traversal goes before falling back to flat listing
# Higher values are more efficient for deep folder structures but may cause stack issues
MAX_RECURSION_DEPTH=4

# S3 prefix delimiter for hierarchical listing
# Character used to separate "directories" in S3 object keys (default: "/")
# Common alternatives: "-", "_", "|"
S3_PREFIX_DELIMITER=/

# S3 Pricing Configuration
# Default S3 price per GB-month (USD) used as fallback when tier-specific pricing is unavailable
DEFAULT_S3_PRICE_PER_GB=0.023
